+load("@bazel_skylib//lib:selects.bzl", "selects")
+load("@boost.rules.tools//:tools.bzl", "boost_library")
+
+boost_library(
+    name = "compute",
+    linkopts = selects.with_or({
+        # OpenCL (required for Boost.Compute) is deprecated on macOS and not supported on other Apple OSs.
+        # This will at least produce the right error message, indicating that OpenCL is not present
+        ("@platforms//os:osx", "@platforms//os:ios", "@platforms//os:watchos", "@platforms//os:tvos"): [
+            "-framework OpenCL",
+        ],
+        "//conditions:default": [
+            "-lOpenCL",
+        ],
+    }),
+    deps = [
+        "@boost.algorithm//:algorithm",
+        "@boost.array//:array",
+        "@boost.assert//:assert",
+        "@boost.chrono//:chrono",
+        "@boost.config//:config",
+        "@boost.core//:core",
+        "@boost.filesystem//:filesystem",
+        "@boost.function//:function",
+        "@boost.function_types//:function_types",
+        "@boost.fusion//:fusion",
+        "@boost.iterator//:iterator",
+        "@boost.lexical_cast//:lexical_cast",
+        "@boost.mpl//:mpl",
+        "@boost.optional//:optional",
+        "@boost.preprocessor//:preprocessor",
+        "@boost.property_tree//:property_tree",
+        "@boost.proto//:proto",
+        "@boost.range//:range",
+        "@boost.smart_ptr//:smart_ptr",
+        "@boost.static_assert//:static_assert",
+        "@boost.thread//:thread",
+        "@boost.throw_exception//:throw_exception",
+        "@boost.tuple//:tuple",
+        "@boost.type_traits//:type_traits",
+        "@boost.typeof//:typeof",
+        "@boost.utility//:utility",
+        "@boost.uuid//:uuid",
+    ],
+)
